@model God

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateGodToDatabase", "God", "Post"))
{
    <input asp-for="GodID" type="hidden" value="@Model.GodID" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Description" class="control-label">Description</label>    
    <input type="text" name="Description" class="form-control" value="@Model.Description" />

    <label asp-for="Temple_Location" class="control-label">Temple Location</label>
    <input type="text" name="Temple_Location" class="form-control" />

    <label asp-for="Parents" class="control-label">Parents</label>
    <input type="text" name="Parents" class="form-control" />

    <input type="submit" value="Update God" class="btn btn-primary" />
}